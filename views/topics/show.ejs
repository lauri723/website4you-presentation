<%- include('../partials/head.ejs') %>
<body class="topics">
    <%- include('../partials/header.ejs') %>
    <%- include('../partials/scroll.ejs') %>
    <div class="inner-container">
      <div class="text-center pb-5">
        <a class="btn btn-primary watch mx-3 px-3" href="/included">What's Included</a>  
        <a class="btn btn-primary watch mx-3 px-3" href="/vidPresentation">Watch a Video Presentation</a>  
        <a class="btn btn-primary watch mx-3 px-3" href="mailto:lauri@lovelywebdesigns.com?
        subject=Contact">Contact Us</a> 
      </div>
      <%- include('../partials/errorMessage.ejs') %>
      <%- include('../partials/headerArticles') %>

      <h2 class="page-header text-center mb-5"><%= topic.name %></h2>
      <div class="btn-row btn-topic">
        <% if(currentUser){ %>
          <a class="btn btn-primary" href="/topics/<%= topic.id %>/edit">Edit</a>
          <%- include('../partials/deleteForm',
                      { url: `/topics/${topic.id}` }) %>
        <% } %>
      </div>
      <% if (articlesByTopic.length > 0) { %>
        <h2 class="page-header">Articles By Topic</h2>
        <%- include('../partials/articleGrid', { articles: articlesByTopic }) %>
      <% } %>
    </div>

<%- include('../partials/footer.ejs') %>